<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Book</h3>
            <form method="POST" action="/books/<%= book._id %>?_method=PUT" novalidate class="needs-validation">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="book[title]" value="<%= book.title %>" type="text" class="form-control"
                        required />

                    <div class="valid-feedback">Title looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <textarea name="book[author]" class="form-control" required>
            <%= book.author %></textarea>
                    <div class="invalid-feedback">Edit enter author name</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Edit Book Image</label>
                    <input name="book[image]" type="file" class="form-control" required />
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="book[price]" value="<%= book.price %>" type="number" class="form-control"
                            required />
                        <div class="invalid-feedback">Edit price</div>
                    </div>


                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Description</label>
                    <input name="book[description]" value="<%= book.description %>" type="text" class="form-control"
                        required />
                    <div class="invalid-feedback">Description should be valid</div>
                </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
              
                <br>
                <br>
            </form>

        </div>
    </div>