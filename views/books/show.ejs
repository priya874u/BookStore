<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        
    <h3>Book Details:</h3>
    <div class="card col-6 offset-2">
        <img src="<%= book.image %>" class="card-img-top show-img" alt="book_image">
        <div class="card-body">
            <p class="card-text">Title:<b><%= book.title %></b><br>
                Author:<%= book.author %><br>
                Price:&#8377; <%= book.price %><br>
                Description:<%= book.description %>
                </p>
        </div>
    </div>
   
    <div class="btn">
    <a href="/books/<%= book._id %>/edit" class="btn btn-dark">Edit</a>
    <br /><br />
    <form method="POST" action="/books/<%=book._id%>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
    </form>
</div>
</div>
</div>

